<!DOCTYPE html>
<html lang="pt-BR">

<% include ../public/fragments/dependencias/dependenciasCSS %>
<% include ../public/fragments/header %>

</head>

<body>
    <% include ../public/fragments/nav %>
    <% include ../public/fragments/sidebar %>

    <main id="content">
        <div class="row section">
            <div class="col s10 offset-s1">


                <table id="materialize-table" class="striped highlight">
                    <thead>

                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>CPF</th>
                            <th>Siape</th>
                            <th>Login</th>
                            <th>Ativo</th>
                        </tr>

                    </thead>

                    <tbody>
                        <% for(var i=0; i<professores.length; i++) {%>
                        <tr> 
                            <td><%= professores[i].nome %></td>
                            <td><%= professores[i].email %></td>
                            <td><%= professores[i].cpf %></td>
                            <td><%= professores[i].siape %></td>
                            <td><%= professores[i].login %></td>

                            <% if(professores[i].ativo){ %>
                                <td><span class="new badge sim" data-badge-caption="Sim"></span></td>
                              <% } else{ %>  
                                <td><span class="new badge nao" data-badge-caption="NÃ£o"></span></td>
                            <% } %>
                        </tr>
                        <% } %>
                    </tbody>
                </table>


            </div>
        </div>
    </main>


    <% include ../public/fragments/footer %>
    <% include ../public/fragments/javascripts %>
    <% include ../public/fragments/dependencias/dependenciasJS %>
    <script src="/javascripts/listarProfessores.js"></script>

</body>

</html>